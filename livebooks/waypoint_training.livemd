```elixir
reward_callback = fn state_vector ->
  x = state_vector[0]
  y = state_vector[1]
  angle = state_vector[2]
  speed = state_vector[3]
  target_x = state_vector[4]
  target_y = state_vector[5]
  min_x = state_vector[6]
  max_x = state_vector[7]
  min_y = state_vector[8]
  max_y = state_vector[9]

  out_of_bounds =
    Nx.less(x, min_x)
    |> Nx.logical_or(Nx.greater(x, max_x))
    |> Nx.logical_or(Nx.greater(y, max_y))
    |> Nx.logical_or(Nx.less(y, min_y))

  has_collided =
    obstacles
    |> BoatLearner.Navigation.WaypointWithObstacles.all_collisions(x, y)
    |> Nx.any()
    |> Nx.logical_or(out_of_bounds)

  pos = Nx.stack([x, y])
  target = Nx.stack([target_x, target_y])

  dist = Nx.subtract(target, pos)
  distance = Nx.LinAlg.norm(dist)

  velocity = Nx.multiply(speed, Nx.complex(Nx.sin(angle), Nx.cos(angle)))
  projected_speed = Nx.dot(velocity, dist) |> Nx.divide(distance)

  score = Nx.sigmoid(1 / Nx.add(distance, 1.0e-12))

  Nx.select(has_collided, score - 10000, score)
end
